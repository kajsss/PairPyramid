<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/user_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_face_black"
            android:tint="@color/DimGray"/>

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:paddingTop="2dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="user_name"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="10sp"
                android:text="user_email"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="55dp"
            android:id="@+id/layout_keep"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/user_keep"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_flag_black"
                android:tint="@color/LightGrey"
                android:layout_marginRight="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_check"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/user_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_done_black"
                android:tint="@color/DimGray"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_list_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/DimGray"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/user_delete_cancle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_undo_white"/>

        <ImageView
            android:id="@+id/user_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete_white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"/>

</LinearLayout>
